            <column name="medication" type="varchar(1000)" />
            <column name="ocular_history" type="varchar(1000)" />
            <column name="family_history" type="varchar(1000)" />
            <column name="drive_heavy_goods" type="boolean" />
            <column name="drive_private" type="boolean" />
            <column name="drive_public" type="boolean" />
            <column name="drive_motorcycle" type="boolean" />
            <column name="vdu" type="boolean" />
            <column name="vdu_hours_per_day" type="smallint" />
            <column name="occupation" type="varchar(60)" />
            <column name="hobbies" type="varchar(60)" />
        </addColumn>
    </changeSet>
</databaseChangeLog>
